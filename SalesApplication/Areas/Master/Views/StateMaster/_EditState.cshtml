

@model StateMaster
 

<div class="modal-header" style="background-color:darkgray">
    <h4 class="modal-title"> Edit State</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="form-horizontal2" id="divEmpDetails">
        <div class="row">
            <div class="col-md-8">
                <section>
                    <form id="frmEditState" action="@Url.Action("Edit","StateMaster",new { area = "Master"})" method="post" enctype="multipart/form-data">
                        <div class="row" style="padding-top: 10px;">
                            <div class="  col-xs-12" style="padding-right: 10px;">
                                <input type="hidden" id="hdnId" value="@Model.Id" name="Id" />
                                <label class="control-label">State Name<span style="color:red"> *</span></label>
                                <input type="text" id="txtName" name="StateName" value="@Model.StateName" class="form-control errorMessage" data-errormessage=" Please enter Employee Name" />
                            </div>
                        </div>
                    </form>
                </section>
            </div>

        </div>
    </div>
</div>
<div class="modal-footer">
    <input type="button" id="btnSubmitState" value="Submit" class="btn btn-primary" />
    <input type="button" value="Close" class="btn btn-danger" data-dismiss="modal" />

</div> 

<script>

    $("#btnSubmitState").click(function () {
        debugger;
        if ($("#txtName").val() == null || $("#txtName").val() == "") {
            Alert("Please enter State");
            return false;
        }
        $("#frmEditState").submit();
    });
</script>