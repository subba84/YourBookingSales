@model SalesApplication.SalesEntry


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content">
    <div class="row">
        <div>
            <div class="card">
                <div class="card-header">
                    <h3>Remewal List</h3>
                    <table class="table table-bordered table-responsive" id="tblViewer">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Mobile Number</th>
                                <th scope="col">State</th>
                                <th scope="col">City</th>
                                <th scope="col">Service Amount</th>
                                <th scope="col">Paid Type</th>
                                <th scope="col">Created By</th>
                                <th scope="col">Created On</th>
                                <th scope="col">ActivatedUpto</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.RenewalHistoryList != null && Model.RenewalHistoryList.Count() > 0)
                            {

                                foreach (var item in Model.RenewalHistoryList)
                                {
                                    <tr>
                                        <td> @item.Name  </td>
                                        <td> @item.MobileNumber  </td>
                                        <td> @item.StateName  </td>
                                        <td> @item.CityName  </td>
                                        <td> @item.ServiceAmount  </td>  
                                        <td> @item.PaidType  </td>
                                        @*<td> @item.ServiceType  </td>
                                            <td> @item.PaidType  </td>
                                            <td> @item.ServiceAmount  </td>*@
                                        <td> @item.CreatedByName  </td>
                                        <td> @(item.CreatedOn!=null?Convert.ToDateTime(item.CreatedOn).ToShortDateString():"--") </td> 
                                        <td> @(item.ActivatedUpto != null?Convert.ToDateTime(item.ActivatedUpto).ToShortDateString():" -- ") </td>

                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="13"> no records..</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card -->
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
    </div>
    <!-- /.row -->
</section>


